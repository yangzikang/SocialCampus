<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scadd_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.socialcampus.view.news.SCAddNewsActivity">

    <com.example.dell.socialcampus.utill.view.SCTitleBar
        android:id="@+id/AddNewsTitleInclude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="52dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/apple"
                android:id="@+id/imageView"
                android:layout_weight="1" />

            <Button
                android:text="上传"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/news_upload"
                android:layout_weight="1" />

        </LinearLayout>
        <EditText
            android:id="@+id/news_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:minLines="8"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:background="@android:drawable/edit_text">
        </EditText>

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2" />

    </LinearLayout>
</RelativeLayout>
