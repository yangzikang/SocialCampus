<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scindex"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.socialcampus.childrenActivity.index.SCIndexActivity">

    <com.example.dell.socialcampus.view.SCTitleBarUI
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <com.example.dell.socialcampus.view.SCNavigationButtom
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

    </com.example.dell.socialcampus.view.SCNavigationButtom>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/navigation">
       <FrameLayout
           android:id="@+id/setIndex"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>
    </LinearLayout>

</RelativeLayout>
