<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dell.socialcampus">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.welcome.SCWelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.login.SCLoginActivity"
            android:launchMode="singleTask" />
        <activity android:name=".activity.mine.SCMineActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".activity.index.SCIndexActivity"
            android:launchMode="singleTop"/>
    </application>

</manifest>